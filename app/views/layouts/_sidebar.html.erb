<div class="sidebar">

	<div class="sidebar-top">
		<img src="/assets/blogger-logo.jpg" alt="">
	</div>

	<div class="sidebar-menu">
		<% if logged_in? %>
			<div class="main-menu">
				<ul>	
					<li><%= link_to "Articles", articles_path %></li>
					<li><%= link_to "Most viewed", most_viewed_path %></li>
					<li><%= link_to "Create a new article", new_article_path %></li>
					<li><%= link_to "Tags", tags_path %></li>
					<li><%= link_to "Authors", authors_path %></li>
				</ul>
			</div>

			<div class="login-menu">
				<ul>
					<li class="small"><i class="fa fa-user"></i> Logged in as <span class="color"><%= current_user %></span></li>
					<li class="small"><i class="fa fa-key"></i> <%= link_to "Logout", logout_path %> </li>
				</ul>
			</div>	
		<% else %>
			<div class="main-menu">
				<ul>	
					<li><%= link_to "Articles", articles_path %></li>
					<li><%= link_to "Most viewed", most_viewed_path %></li>
					<li><%= link_to "Tags", tags_path %></li>
				</ul>
			</div>

			<div class="login-menu">
				<ul>
					<li class="small"><i class="fa fa-key"></i> <%= link_to "Login", login_path %></li>
				</ul>
			</div>
		<% end %>
	</div>
	
	<div class="archive-menu">	
		Archive: 
		<%= form_tag({controller: "articles", action: "index"}, method: "get") do %>
			<div class="select-style">
	 			<%= select_tag(:month, options_for_select([
	 					['Month', 0], ['January', 1], ['February', 2], ['March', 3], ['April', 4], 
	 					['May', 5], ['June', 6], ['July', 7], ['August', 8], 
	 					['September', 9], ['October', 10], ['November', 11], ['December', 12]], 0)) %>
	 		</div>
			<div class="select-style">
   			<%= select_tag(:year, options_for_select([
   					['Year', 0], ['2016'], ['2017'], ['2018'], 
   					['2019'], ['2020'], ['2021'], ['2022'], 
   					['2023'], ['2024'], ['2025']], 0)) %>
   		</div>
    	<%= submit_tag "Search", :id => "archive-search" %>
		<% end %>		
	</div>

	<div class="rss">
		<a href="#"><span class="color"><i class="fa fa-rss-square fa-lg"></i></span> Subscribe</a>	
	</div>

	<div class="sidebar-footer">
		Developed by Fabricio Carrara&nbsp;&nbsp;&nbsp;
			<a href="https://github.com/fcarrara/blogger" target="_blank"><i class="fa fa-github fa-lg"></i></a>
	</div>

</div>
